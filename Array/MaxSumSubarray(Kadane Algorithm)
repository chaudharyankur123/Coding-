long long maxSubarraySum(int arr[], int n){
        
        // Your code here
        long long maxsum=INT_MIN;
        long long currsum=0;
        
        for(int i=0;i<n;i++){
            currsum=currsum+arr[i];
            if(currsum>maxsum){
                maxsum=currsum;
            }
            if(currsum<0){
                currsum=0;
            }
            
        }
        return maxsum;
    }
